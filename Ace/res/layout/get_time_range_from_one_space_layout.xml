<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:layout_marginTop="20dp"
    android:background="#ccc">
    
  <LinearLayout android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      >
        <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="起始时间"
         android:textColor="#000"
        />
        <EditText  android:id="@+id/get_one_square_first_time_editor"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="y-m-d h-m-s"
              android:textColor="#000"
             android:text="2008-02-03 15:00:00"
            />
    
  </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      >
        <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束时间"
          android:textColor="#000"
        />
        <EditText  android:id="@+id/get_one_square_last_time_editor"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="y-m-d h-m-s"
            android:text="2008-02-03 16:00:00"
              android:textColor="#000"
            />
    
  </LinearLayout>
  
    <LinearLayout 
        android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical"
    
        >
         <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="纬度范围:"
          android:textColor="#000"/>
          <EditText  android:id="@+id/get_one_square_first_latitude_editor"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:hint="latitude"
              android:textColor="#000"
              android:text="39"
            />
           <EditText  android:id="@+id/get_one_square_second_latitude_editor"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:hint="latitude"
              android:textColor="#000"
               android:text="40"
            />
          
    </LinearLayout>
  
    
    <LinearLayout 
        android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical"
        >
         <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:textColor="#000"
        android:text="经度范围:"/>
          <EditText  android:id="@+id/get_one_square_first_longitude_editor"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:hint="longitude"
             android:text="116"
              android:textColor="#000"
            />
           <EditText  android:id="@+id/get_one_square_second_longitude_editor"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:hint="longitude"
             android:text="117"
              android:textColor="#000"
            />
          
    </LinearLayout>
    
    
    
    
    <Button android:id="@+id/get_one_square_sureBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="确定"
        ></Button>

</LinearLayout>